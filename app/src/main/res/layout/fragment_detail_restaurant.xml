<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.DetailRestaurantFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_detail_sample"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/size_32"
                android:layout_height="@dimen/size_32"
                android:src="@drawable/ic_share"
                android:layout_marginTop="@dimen/size_36"
                android:layout_marginEnd="@dimen/layout_margin_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="204dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_home_view_radius"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp">

                    <TextView
                        android:id="@+id/categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_start"
                        android:layout_marginTop="@dimen/size_24"
                        android:background="@drawable/bg_category_radius"
                        android:fontFamily="@font/suit_semibold"
                        android:paddingStart="@dimen/layout_margin_start"
                        android:paddingTop="@dimen/size_6"
                        android:paddingEnd="@dimen/layout_margin_start"
                        android:paddingBottom="@dimen/size_6"
                        android:text="                      "
                        android:textColor="@color/green_main"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="left|center_vertical"
                        android:layout_marginStart="@dimen/layout_margin_start"
                        android:layout_marginTop="@dimen/size_4"
                        android:fontFamily="@font/suit_extrabold"
                        android:text=""
                        android:textColor="@color/gray_1E2321"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/categories" />



                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/suit_regular"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/gray_1E2321"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                        app:layout_constraintStart_toEndOf="@+id/imageView10"
                        app:layout_constraintTop_toTopOf="@+id/imageView10" />

                    <ImageView
                        android:id="@+id/bookmark"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_heart1"
                        android:layout_marginEnd="@dimen/size_20"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_name" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_map"
                        android:layout_marginTop="@dimen/size_18"
                        app:layout_constraintStart_toStartOf="@+id/tv_name"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:layout_marginTop="@dimen/size_24"
                        android:layout_marginStart="@dimen/layout_margin_start"
                        android:layout_marginEnd="@dimen/layout_margin_start"
                        android:background="@color/gray_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="123dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="@dimen/size_24"
                        android:src="@drawable/ic_hour"
                        android:layout_marginStart="@dimen/size_40"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="123dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="@dimen/size_40"
                        android:src="@drawable/ic_number"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                        app:layout_constraintStart_toEndOf="@+id/imageView11"
                        app:layout_constraintTop_toTopOf="@+id/imageView11" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_400"
                        android:layout_marginTop="@dimen/size_8"
                        app:layout_constraintStart_toStartOf="@+id/imageView11"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_8"
                        android:text=""
                        android:textColor="@color/gray_400"
                        app:layout_constraintStart_toStartOf="@+id/imageView12"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/gray_layout"
                        android:layout_marginTop="@dimen/size_32"
                        app:layout_constraintTop_toBottomOf="@+id/tv_time"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/tv_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/suit_extrabold"
                        android:text="Restaurant Menu"
                        android:textColor="@color/gray_1E2321"
                        android:textSize="18sp"
                        android:layout_marginTop="@dimen/size_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

                    <TextView
                        android:id="@+id/tv_menu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/suit_regular"
                        android:text="                   "
                        android:textColor="@color/green_main"
                        android:textSize="18sp"
                        android:background="@drawable/bg_menu_radius"
                        android:layout_marginTop="@dimen/size_12"
                        android:paddingStart="@dimen/layout_margin_start"
                        android:paddingTop="@dimen/size_6"
                        android:paddingEnd="@dimen/layout_margin_start"
                        android:paddingBottom="@dimen/size_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name3" />

                    <TextView
                        android:id="@+id/tv_menu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/suit_regular"
                        android:text="                   "
                        android:textColor="@color/green_main"
                        android:textSize="18sp"
                        android:background="@drawable/bg_menu_radius"
                        android:layout_marginTop="@dimen/size_8"
                        android:paddingStart="@dimen/layout_margin_start"
                        android:paddingTop="@dimen/size_6"
                        android:paddingEnd="@dimen/layout_margin_start"
                        android:paddingBottom="@dimen/size_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_menu1" />

                    <TextView
                        android:id="@+id/tv_menu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/suit_regular"
                        android:text="                   "
                        android:textColor="@color/green_main"
                        android:textSize="18sp"
                        android:background="@drawable/bg_menu_radius"
                        android:layout_marginTop="@dimen/size_8"
                        android:paddingStart="@dimen/layout_margin_start"
                        android:paddingTop="@dimen/size_6"
                        android:paddingEnd="@dimen/layout_margin_start"
                        android:paddingBottom="@dimen/size_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_menu2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/gray_layout"
                        android:layout_marginTop="@dimen/size_32"
                        app:layout_constraintTop_toBottomOf="@+id/tv_menu3"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/tv_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_24"
                        android:fontFamily="@font/suit_extrabold"
                        android:text="Restaurant Review"
                        android:textColor="@color/gray_1E2321"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/layout_margin_start"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:src="@drawable/star"
                        android:layout_marginStart="@dimen/layout_margin_start"
                        android:layout_marginTop="@dimen/size_8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name4" />

                    <ImageView
                        android:id="@+id/review"
                        android:layout_width="@dimen/size_60"
                        android:layout_height="@dimen/size_18"
                        android:layout_marginStart="148dp"
                        android:src="@drawable/ic_review"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_name4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_name4"
                        app:layout_constraintTop_toTopOf="@+id/tv_name4"
                        android:layout_marginEnd="@dimen/layout_margin_start"
                        app:layout_constraintVertical_bias="0.5" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_4"
                        android:fontFamily="@font/suit_regular"
                        android:text="4.72"
                        android:textColor="@color/gray_400"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                        app:layout_constraintStart_toEndOf="@+id/imageView14"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                        app:layout_constraintTop_toTopOf="@+id/imageView14" />

                    <ImageView
                        android:id="@+id/no_review"
                        android:layout_width="209dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/iv_no_review"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_rating"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_rating"
                        tools:listitem="@layout/review_detail_item"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout7"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="400dp"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>